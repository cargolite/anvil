{
    "name": "cargolite/anvil",
    "description": "An opinionated code formatter for PHP.",
    "keywords": ["php", "format", "formatter", "lint", "linter"],
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/cargolite/anvil/issues",
        "source": "https://github.com/cargolite/anvil"
    },
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        },
        {
            "name": "Mike Rock√©tt",
            "email": "mike.rockett@megafreight.co.za"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.59.3",
        "illuminate/view": "^10.48.12",
        "larastan/larastan": "^2.9.7",
        "laravel-zero/framework": "^10.4.0",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/termwind": "^1.15.1",
        "pestphp/pest": "^2.34.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scripts\\": "scripts/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1.0"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["builds/anvil"]
}
